FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package.json package-lock.json* ./
RUN npm ci

# Copy prisma schema for generation
COPY prisma ./prisma
RUN npx prisma generate

# Expose port
ARG PORT=3000
EXPOSE ${PORT}

ENV PORT=${PORT}
ENV HOSTNAME="0.0.0.0"

# Start development server
CMD ["npm", "run", "dev"]

